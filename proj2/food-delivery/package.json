{
  "name": "food-delivery-html-bootstrap-mongo",
  "version": "1.0.0",
  "description": "Simple Food Delivery App using HTML + Bootstrap frontend and MongoDB via Node/Express backend.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "seed": "node seed/seed.js",
    "seed:admins": "node seed/seed_admins.js",
    "seed:demo6": "node seed/seed_demo6.js",
    "seed:demo6:admins": "node seed/seed_demo6_admins.js",
    "seed:supermarkets": "node seed/seed_supermarkets.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --config jest.config.mjs",
    "test:cov": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --config jest.config.mjs --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "test:fe": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.frontend.mjs",
    "test:fe:cov": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.frontend.mjs --coverage",
    "start:test": "cross-env NODE_ENV=test node server.js"
  },
  "keywords": [
    "food",
    "delivery",
    "bootstrap",
    "mongodb",
    "express",
    "html"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "connect-mongo": "^5.1.0",
    "cookie": "^1.0.2",
    "cors": "2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "path-to-regexp": "^8.3.0",
    "send": "^1.2.0",
    "supertest": "^7.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^10.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "transform": {}
  }
}
